/** 获取小时 */
module.exports.hour = function (time) {
  var _time ="00"+  Math.floor(time / 3600)
  return _time.slice(-2);
}
/** 获取分 */
module.exports.minute = function (time) {
  var _time ="00"+ Math.floor(time % 3600 / 60)
  return _time.slice(-2);
}
/** 获取秒 */
module.exports.second = function (time) {
  var _time ="00"+ (time % 60)
  return _time.slice(-2);
}