    <view class="c-part">

      <view class="c-one-part">
        <view class="s-mid-title ciname">{{detailText.desc01}}</view>
        <image class="s-img-1" mode="aspectFill" src="{{cinemas.img}}"></image>
        <view class="s-info-wrap">
